<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_deep_orange_300"
    tools:context=".fragments.LibraryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_medium_2"
            android:layout_marginTop="@dimen/margin_medium_2"
            app:cardCornerRadius="@dimen/margin_medium"
            app:cardElevation="@dimen/margin_medium">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium_2"
                android:layout_marginVertical="@dimen/margin_medium"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_black"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_marginHorizontal="@dimen/margin_medium"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/width_profile_pic"
                    android:layout_height="@dimen/height_profile_pic"
                    app:srcCompat="@drawable/profile_photo"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/margin_medium"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_marginTop="@dimen/margin_medium_2"
                    android:layout_toEndOf="@id/ivSearch"
                    android:hint="@string/hint_search_bar"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewSearch"
            app:tabTextColor="@color/secondary_text"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabIndicatorHeight="4dp"
            app:tabTextAppearance="@style/MyCustomTextAppearance"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginHorizontal="@dimen/margin_medium_3"
            android:elevation="@dimen/margin_medium"/>

        <include
            layout="@layout/view_pod_books"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tabLayoutLibrary"
            android:layout_marginTop="-2dp" />

    </RelativeLayout>

    <include
        android:id="@+id/viewTypeBottomSheet"
        layout="@layout/change_view_bottom_sheet"
        />

    <include
        android:id="@+id/sortByBottomSheet"
        layout="@layout/sort_by_bottom_sheet"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>